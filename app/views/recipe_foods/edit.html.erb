<section class="d-flex flex-column align-items-center">
  <h1 class="text-center">Edit ingredient</h1>
  <div class="wrapper">
    <%= form_with url: user_recipe_recipe_food_path, method: :patch do |form| %>
      <div class="form-group">
        <%= form.select :food_id, @foods.collect  {|food| [food.name, food.id]},{ include_blank: true}, class: "form-control", placeholder: "Recipe" %>
      </div>
      <div class="form-group">
        <%= form.number_field :quantity, class: "form-control", placeholder: "Quantity" %>
      </div>
      <button type="submit" class="btn btn-primary">Edit</button>
    <% end %>
  </div>
</section>